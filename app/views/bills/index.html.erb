<ul>
  <li><%= link_to 'New bill', new_bill_path %></li>
</ul>

<table>
  <thead>
    <th>Payment</th>
    <th>Status</th>
    <th>Delivered</th>
    <th>Delivered Date</th>
    <th>Bill Date</th>
    <th>Bill Reference</th>
  </thead>
  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.payment.reference %></td>
        <td><%= bill.status %></td>
        <td><%= bill.delivered %></td>
        <td><%= bill.delivered_date %></td>
        <td><%= bill.bill_date %></td>
        <td><%= bill.bill_reference %></td>
        <td><%= link_to "Modify", bill_path(bill) %></td>
      </tr>
    <% end %>
  </tbody>
</table>