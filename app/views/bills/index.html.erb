<div class="container d-flex justify-content-between align-items-center py-2">
  <h1>Bills</h1>
    <%= link_to 'New bill', new_bill_path, class: 'btn btn-success', data: { turbo_frame: 'new_payment' } %>
</div>

<table class="table table-hover">
  <thead>
    <th>Payment</th>
    <th>Status</th>
    <th>Delivered Date</th>
    <th>Bill Date</th>
    <th>Bill Reference</th>
  </thead>
  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.payment.reference %></td>
        <td><%= bill.status %></td>
        <td><%= bill.delivered_date %></td>
        <td><%= bill.bill_date %></td>
        <td><%= bill.bill_reference %></td>
        <td><%= link_to "Modify", bill_path(bill) %></td>
      </tr>
    <% end %>
  </tbody>
</table>