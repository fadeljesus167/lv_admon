<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card my-5">
                <%= form_with url: login_path, class: 'card-body cardbody-color p-lg-5' do |form| %>
                    <div class="text-center">
                        <%= image_tag("https://logosmarcas.net/wp-content/uploads/2020/09/Linux-Simbolo.png", width: 200) %>
                    </div>
                    <div class="mb-3">
                        <%= form.label :username, class: 'form-label' %>
                        <%= form.text_field :username, class: 'form-control', autofocus: true %>
                    </div>

                    <div class="mb-3">
                        <%= form.label :password, class: 'form-label' %>
                        <%= form.password_field :password, class: 'form-control' %>
                    </div>

                    <div class="text-center">
                        <%= form.submit 'Login', class: 'btn btn-color px-5 mb-5 w-100' %>
                    </div>
                <% end %>
            </div>

        </div>
    </div>
</div>